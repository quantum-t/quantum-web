{% if inspiration.inspire %}
{% set homePage = (true if pageType == 'Homepage' else false) %}
  {% for inspired in inspiration.inspire %}
    {% set showQuote = true %}
    {% if not (inspired.onHomepage and homePage) %}
      {% set showQuote = false %}
    {% endif %}

    {% if showQuote %}
      <div class="inspired">
        <span>
          <blockquote>
            <p>{{ inspired.quote }}</p>
            {% if inspired.source %}
            <cite> {{ inspired.source }} </cite>
            {% endif %}
          </blockquote> 
        </span>
      </div>
    {% endif %}  
  {% endfor %}
{% endif %}